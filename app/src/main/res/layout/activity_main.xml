<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"
    android:paddingHorizontal="@dimen/indent_and_rounding"
    android:paddingVertical="14dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/font"
        android:text="@string/app_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="28dp"
        android:orientation="vertical">

        <Button
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/search"
            android:textSize="@dimen/font"
            android:textColor="@color/black1"
            app:cornerRadius="@dimen/indent_and_rounding"

            app:icon="@drawable/search"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/indent_from_the_icon"
            app:iconTint="@color/black1"/>


        <Button
            android:layout_marginTop="@dimen/indent_and_rounding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/media_library"
            android:textSize="@dimen/font"
            android:textColor="@color/black1"
            app:cornerRadius="@dimen/indent_and_rounding"

            app:icon="@drawable/media"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/indent_from_the_icon"
            app:iconTint="@color/black1"/>

        <Button
            android:layout_marginTop="@dimen/indent_and_rounding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/settings"
            android:textSize="@dimen/font"
            android:textColor="@color/black1"
            app:cornerRadius="@dimen/indent_and_rounding"

            app:icon="@drawable/setting"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/indent_from_the_icon"
            app:iconTint="@color/black1"/>


    </LinearLayout>

</LinearLayout>