<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_22</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/dp_16</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/font_22</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cornerRadius">@dimen/dp_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/indent_from_the_icon</item>
        <item name="iconTint">@color/black1</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:translationZ">2dp</item>
    </style>

    <style name="ArrowInHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/dp_12</item>
        <item name="android:src">@drawable/arrow</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:checked">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_indent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <item name="colorSwitchThumbNormal">@color/text_gray</item>
        <item name="colorControlActivated">@color/text_gray</item>
        <item name="trackTint">@color/light_gray</item>
        <item name="android:checked">false</item>
    </style>

<!--    style="@sty"-->
</resources>